<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <com.aoiyume.Game.GameMainGLSurfaceView
        android:id="@+id/gameMainGLSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/inputText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="6"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/gameMainGLSurfaceView"
        app:layout_constraintStart_toStartOf="@+id/gameMainGLSurfaceView"
        app:layout_constraintTop_toBottomOf="@+id/gameMainGLSurfaceView" />

    <EditText
        android:id="@+id/inputText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="6"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/gameMainGLSurfaceView"
        app:layout_constraintStart_toStartOf="@+id/gameMainGLSurfaceView"
        app:layout_constraintTop_toBottomOf="@+id/gameMainGLSurfaceView" />


</androidx.constraintlayout.widget.ConstraintLayout>